generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id             Int           @id @default(autoincrement())
  contatoPassivo Boolean       @default(false)   
  tipoContato    String?                    
  tipo           String
  motivo         String
  descricao      String
  cliente        String
  veiculo        String
  dataAbertura   DateTime
  status         String        @default("A fazer")
  usuarioId   Int?
  usuario     Usuario? @relation(fields: [usuarioId], references: [id])
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}



model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String?
  email    String?   @unique
  login    String   @unique
  password String
  cargo    String   @default("Atendente") // Admin | Atendente
  tickets  Ticket[]
}